{
  "manifest_version": 3,
  "name": "Youtube Miniplayer",
  "offline_enabled": true,
  "description": "Restores the miniplayer control to youtube videos",
  "action": {
    "default_title": "Youtube Miniplayer",
    "default_popup": "./html/popup.html"
  },
  "version": "1.0.2",
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "./js/youtube.js"
      ]
    }
  ],
  "background": {
    "service_worker": "./js/background.js"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://raw.githubusercontent.com/GrayHat12/no-spoilers/refs/heads/main/updates/GENERAL.md",
    "https://raw.githubusercontent.com/GrayHat12/no-spoilers/refs/heads/main/updates/YTMiniplayer.md"
  ],
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}